<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="UTF-8">
    <meta name="description" content="Labs - Design Studio">
    <meta name="keywords" content="lab, onepage, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="shortcut icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,700|Roboto:300,400,700" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="@Url.Content("~/Content/MyTemp/")css/bootstrap.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/MyTemp/")css/font-awesome.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/MyTemp/")css/flaticon.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/MyTemp/")css/magnific-popup.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/MyTemp/")css/owl.carousel.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/MyTemp/")css/style.css" />

    <script src="@Url.Content("~/Content/MyTemp/")js/jquery-2.1.4.min.js"></script>
    <script src="@Url.Content("~/Content/MyTemp/")js/bootstrap.min.js"></script>
    <script src="@Url.Content("~/Content/MyTemp/")js/magnific-popup.min.js"></script>
    <script src="@Url.Content("~/Content/MyTemp/")js/owl.carousel.min.js"></script>
    <script src="@Url.Content("~/Content/MyTemp/")js/circle-progress.min.js"></script>
    <script src="@Url.Content("~/Content/MyTemp/")js/main.js"></script>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>


    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader">
            <img src="img/logo.png" alt="">
            <h2>Loading.....</h2>
        </div>
    </div>


    <!-- Header section -->
    <header class="header-section">
        <div class="logo">
            <img src="img/logo.png" alt=""><!-- Logo -->
        </div>
        <!-- Navigation -->
        <div class="responsive"><i class="fa fa-bars"></i></div>
        <nav>
            <ul class="menu-list">
                <li class="active">@Html.ActionLink("Home", "ViewMain", "Home")</li>
                <li><a href="">products and items</a></li>
                <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                <li><a href="">Customers and Vendors</a></li>
                <li><a href="">Stores</a></li>
                <li><a href="">Actions</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Sign out", "Login", "Home")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                }
          
            </ul>
        </nav>
    </header>
    <!-- Header section end -->
    
    <!-- Intro Section -->
    <div class="hero-section">
        <div class="hero-content">
            <div class="hero-center">
                <img src="img/big-logo.png" alt="">
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
        
        <!-- slider -->
        <div id="hero-slider" class="owl-carousel">
            <div class="item  hero-item" data-bg="img/01.jpg"></div>
            <div class="item  hero-item" data-bg="img/02.jpg"></div>
        </div>
    </div>
    <!-- Intro Section -->

    
</body>

</html>

<!-- Footer section -->
<footer class="footer-section">
    <h2>2017 All rights reserved. Designed by <a href="https://colorlib.com" target="_blank">Colorlib</a></h2>
</footer>
<!-- Footer section end -->
